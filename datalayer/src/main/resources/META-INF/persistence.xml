<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    <persistence-unit name="based_on_hibernate" transaction-type="RESOURCE_LOCAL">

        <!-- Hibernate -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Datasource -->
        <!-- defined in the properties -->

        <!-- Entity mapping (lookup of entities in given 'jar-files') -->
        <jar-file>@glkb.core.dir@/target/classes/ch/glkb/core</jar-file>
        <jar-file>@progress.web.dir@/target/classes/ch/glkb/progress</jar-file>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:h2:tcp://localhost/~/.h2/progress/based_on_hibernate" />
            <property name="hibernate.connection.driver_class" value="org.h2.Driver" />
            <property name="hibernate.connection.username" value="sa" />
            <property name="hibernate.connection.password" value="sa" />

            <property name="hibernate.dialect" value="ch.glkb.core.server.hibernate.dialect.GlkbH2Dialect" />

            <property name="hibernate.hbm2ddl.auto" value="create" />

            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.id.new_generator_mappings" value="true" />
            <property name="hibernate.cache.use_query_cache" value="false" />
            <property name="hibernate.cache.use_second_level_cache" value="false" />

            <property name="hibernate.physical_naming_strategy" value="ch.glkb.core.server.hibernate.naming.ImprovedPhysicalNamingStrategyStandardImpl" />

        </properties>

    </persistence-unit>
</persistence>